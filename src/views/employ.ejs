<body class="employ">
    

    <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link active atagnav" aria-current="page" href="/employ">Employee data</a>
        </li>
        <li class="nav-item anav">
          <a class="nav-link atagnav" href="/addemploy">Add employee</a>
        </li>
        <li class="nav-item">
          <a class="nav-link atagnav" href="/logout">Logout</a>
        </li>
        
      </ul>
      

      <div>
        <% if (message){ %>
          <div class="alert alert-dismissible fade show alert-<%=message.type%>" role="alert">

            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
            <strong><%= message.message %></strong>
          </div>

        <%}%>
      </div>
      
      <table class="table">
        <caption>Statement Summary</caption>
        <thead>
          <tr>
            <th scope="col">A name</th>
            <th scope="col">gender</th>
            <th scope="col">designation</th>
            <th scope="col">city</th>
            <th scope="col">image</th>
            <th scope="col">update</th>
            <th scope="col">delete</th>
            <th scope="col">more info</th>
          </tr>
        </thead>
        <tbody>
          <%for(i=0;i<items.length;i++){%>
          <tr>
            <td data-label="name"><%=items[i].name%></td>
            <td data-label="gender"><%=items[i].gender%></td>
            <td data-label="designation"><%=items[i].designation%></td>
            <td data-label="city"><%=items[i].city%></td>
            <td data-label="img"><img src="/images/<%=items[i].image%>" alt="" width="100px" height="50px"></td>
            <td data-label="update"><a href="/update/<%=items[i]._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a></td>
            <td data-label="delete"><a href="/delete/<%=items[i]._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a></td>
            <td data-label="more info"><a href="/single/<%=items[i]._id%>" class="text-success">more info</a></td>
          </tr>
          <%}%>
         
          
        </tbody>
      </table>

      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
      $(document).ready(function(){
        $("table").DataTable({
          order:[0, 'desc']
        });
      });
    </script>  
</body>
